<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefWidth="400.0" stylesheets="@../css/CreateEvent.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controllers.ManageCoordinatorsController">
   <center>
      <VBox spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <TableView fx:id="tvAssigned" prefHeight="300.0">
              <columns>
                <TableColumn fx:id="tcAssigned" editable="false" maxWidth="340.0" minWidth="-1.0" prefWidth="340.0" resizable="false" text="Assigned Coordinators" />
              </columns>
            </TableView>
            <HBox alignment="CENTER" spacing="5.0">
               <children>
                  <Button layoutX="48.0" layoutY="10.0" mnemonicParsing="false" onAction="#removeCoordinator" text="⬇" />
                  <Button mnemonicParsing="false" onAction="#addCoordinator" text="⬆" />
               </children>
            </HBox>
            <TableView fx:id="tvAvailable" prefHeight="300.0">
              <columns>
                <TableColumn fx:id="tcAvailable" maxWidth="340.0" minWidth="-1.0" prefWidth="340.0" resizable="false" text="Available Coordinators" />
              </columns>
            </TableView>
         </children>
      </VBox>
   </center>
   <padding>
      <Insets bottom="15.0" left="30.0" right="30.0" top="30.0" />
   </padding>
   <bottom>
      <HBox alignment="CENTER_RIGHT" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#cancel" text="Cancel" />
            <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#saveChanges" text="Save" />
         </children>
         <BorderPane.margin>
            <Insets top="10.0" />
         </BorderPane.margin>
      </HBox>
   </bottom>
</BorderPane>
